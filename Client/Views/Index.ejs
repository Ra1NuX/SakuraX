</header>
    <div class="row p-3" >
        <div class="col-sm-3 mb-3" >
            <div class="card">
                <div class="card-body">
                    <div class="tree">
                        <ul class="mb-0 pl-0">
                            <li class="folder"><a class="folder" href="#"> /</a>
                        <% Tree.forEach(function(tree) { %>
                                <ul class="li-ul-tree">
                                    <% if(tree.type == "file"){%>
                                     <% switch(tree.name.substr(-3)) {
                                         case 'png' : %>  
                                        <li class="file png"> <%= tree.name %> </li>
                                        <%break;
                                        case 'jar' : %>
                                        <li class="file jar"> <%= tree.name %></li>
                                        <%break;
                                        case 'exe' : %>
                                        <li class="file exe"> <%= tree.name %></li>
                                        <%break;;%>
                                  <%}}else{%>
                                    <li class="folder"> <a class="folder" href="#"> <%= tree.name %> </a> <button type="button" class="close DeleteFolder" aria-hidden="<%= tree.path %>">
                                        <span aria-hidden="true">&times;</span>
                                      </button></li>
                                <%}%>
                                </ul>
                        <%})%>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-7 p-0"> 
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body" style="padding: 5px;">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb" style="margin-bottom:0rem">
                                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                                  <li class="breadcrumb-item"><a href="#">Library</a></li>
                                  <li class="breadcrumb-item active" aria-current="page">Data</li> 
                                </ol>
                              </nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4 ">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
