    <div class="row p-3 mr-0">
        <div class="col-sm-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="tree">
                        <ul class="mb-0 pl-0">
                            <li class="folder">
                                <% var Id = 0 ;
                                var PointerActualPath = ActualPath ;
                                %>
                                <% Tree.forEach(function(tree) { %>
                                <ul class="li-ul-tree">
                                    <% if(tree.type == "file"){%>
                                    <% var ext = tree.name.substr(-3);%>
                                    <% switch(ext) {
                                         case ext: %>
                                    <li class="file ext" style="list-style-image: url('/assets/<%= ext %>.png');">
                                        <form action="/DeleteFolder" method="POST"><input type="hidden" name="path"
                                                value="<%=tree.path%>"><button type="submit" class="close">
                                                <span aria-hidden="true">&times;</span>
                                            </button></form> <%= tree.name %>
                                    </li>
                                    <%break;
                                        default : %>
                                    <li class="file">
                                        <form action="/DeleteFolder" method="POST"><input type="hidden" name="path"
                                                value="<%=tree.path%>"><button type="submit" class="close">
                                                <span aria-hidden="true">&times;</span>
                                            </button></form> <%= tree.name %>
                                    </li>
                                    <%break;;%>
                                    <%}}else{
                                    var ActualPath = [JSON.stringify(tree.path)];
                                    tree.forEach((treeChildren) => {
                                    %>
