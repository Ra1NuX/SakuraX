                                            <input type="hidden" name="path"
                                            value="<%=tree.path%>">
                                            <button type="submit" class="close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </form>
                                        <form action="/ChangeRoute" method="POST"><a class="folder"> </a><input type="hidden" name="path" value="<%=tree.path%>"><button type="submit" class="btn-link"> <%=tree.name%></button></form>
                                        </div>
                                    </li>
                                    <%})%>
                                    <%}%>
                                </ul>
                                <%})%>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-7 p-0">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body" style="padding: 5px;">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb" style="margin-bottom:0rem">
                                    <form action="/ChangeRoute" method="POST"><input type="hidden" name="path" value="<%=RootPath%>"><button type="submit" class="btn-Main-Link"> SakuraXCloud</button></form>
                                    <% var aux = PointerActualPath.split('/') ;%>
